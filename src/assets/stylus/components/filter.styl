.filter 
    width 100%
    background var(--white)
    border-radius 6px
    .filter-item
        flex-center()
        justify-content space-between
        padding 10px 20px
        .filter-select
            flex-center()
            .react-select-container
                margin-right 40px
                width 135px
                .react-select__control
                    border 1px solid var(--white)
                    border-radius 6px
                    box-shadow 0px 0px 4px rgba(0, 0, 0, 0.25)
        .filter-search
            flex-center()
        .filter--text
            font-size 18px
            margin-right 20px
    .input
        border 2px solid var(--white)
        box-shadow 0px 0px 4px rgba(0, 0, 0, 0.25)
        input
            height 34px