.button
    display flex
    align-items center
    justify-content center
    width 100%
    height 38px
    background linear-gradient(90deg, rgba(255, 107, 0, 0.09) 57.55%, rgba(0, 0, 0, 0) 75.47%), var(--purple)
    border-radius 12px
    color var(--white)
    cursor pointer
    a
        display flex
        margin-right 0 !important
        padding 10px 16px
        border-radius 10px
