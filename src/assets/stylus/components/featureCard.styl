.feature-card--container 
	display flex
	flex-direction column
	justify-content center
	align-items center
	height 100%
	width 330px
	border-radius 6px
	background-color #fff
	&:last-child
		margin-right 0
	.card-content
		display flex
		flex-direction column
		justify-content space-between
		padding 24px
		.card-header
			display flex
			justify-content flex-start
			align-items center
			width 100%
			margin-bottom 25px
			color var(--black)
			.user-pp
				width 1em
				height 1em
				margin-right 3px
				border-radius 50%
				border 1px solid var(--stroke)
		.card-body
			text-align left
			margin-bottom 35px
			.card-title
				margin-bottom 25px
			.card-desc
				font-size 12px
				color #9B9B9B