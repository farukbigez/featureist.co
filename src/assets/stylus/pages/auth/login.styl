.login-section
    display flex
    justify-content space-between
    padding 64px 200px
    svg
        width 500px
        height 250px
    .login-form
        display flex
        flex-direction column
        align-items center
        .form-title
            font-size 28px
            font-weight 600
            margin-bottom 10px
        .form-desc
            color var(--notActive)
    .form-switch
        display flex
        justify-content space-between
        font-size 18px