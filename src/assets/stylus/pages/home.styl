.home-page
    display flex
    flex-direction column
    align-items center
    .section-text
        display flex
        flex-direction column
        .section-title
            width 530px
            font-size 28px
            margin-bottom 10px
            @media (max-width: 1000px)
                width inherit
                text-align center
                padding 10px
        .section-desc
            width 360px
            color var(--notActive)
            @media (max-width: 1000px)
                width inherit
                text-align center
                padding 10px

    .manifest-section
        display flex
        justify-content space-between
        align-items center
        padding 84px
        margin-bottom 32px
        @media (max-width: 1000px)
            display flex
            flex-direction column
            text-align center
        .manifest-text
            margin-right 32px
            font-size 48px
            font-weight 600
            width 50%
            background linear-gradient(to right, #FF6B00 0, #7F52CA 50%, #7F52CA 10%)
            background-position 0
            -webkit-background-clip text
            -webkit-text-fill-color transparent
            animation shine 6s infinite linear
            animation-fill-mode forwards
            @keyframes shine
                100%
                    background-position 600px
            @media (max-width: 1000px)
                width 100%
                margin-bottom 10px
                margin-right inherit
        .right-manifest
            display flex
            flex-direction column
            text-align center
            .right-manifest--title
                font-size 24px
                font-weight 600
                transition transform 20ms ease-in-out
                &:hover
                    transform scale(1.2)
                @media (max-width: 1000px)
                    width 100%
                    margin-bottom 10px
            .right-manifest--desc
                margin-bottom 20px
                color var(--notActive)
            .start-button
                font-size 18px
                height 58px
                font-weight 600
                border-radius 12px
                transition transform 250ms
                &:hover
                    transform translateY(-10px)

    .how-section
        display flex
        align-items center
        padding 32px 160px
        @media (max-width: 1000px)
            display flex
            flex-direction column
            padding 10px
        .how-box
            display flex
            align-items center
            width 100%
            height 140px
            margin-right 20px
            padding 20px 25px
            margin-bottom 64px
            border-radius 4px
            border 0.5px solid var(--stroke)
            box-shadow 0px 2px 4px rgba(92, 92, 92, 0.25)
            svg
                width 100px
                height 78px
                margin-right 22px
            @media (max-width: 1000px)
                margin-right inherit
            .how-box--group
                display flex
                flex-direction column
                text-align left
                .how-box--title
                    font-size 22px
                    font-weight 600
                .how-box--desc
                    color var(--notActive)

    .landing-section
        display flex
        align-items center
        justify-content space-between
        padding 64px 160px
        width 100%
        margin-bottom 120px
        border 0.1px solid var(--cardBg)
        border-radius 12px
        background var(--cardBg)
        svg
            width 430px
            height 250px
        @media (max-width: 1000px)
            display flex
            flex-direction column
            padding 10px

        .join-text
            font-size 24px
            .section-title
                margin-bottom 10px
            .start-button
                font-size 18px