.home-page
    display flex
    flex-direction column
    svg
        width 430px
        height 250px
    .section-text
        display flex
        flex-direction column
        .section-title
            width 530px
            font-size 28px
            margin-bottom 10px
        .section-desc
            width 360px
            color var(--notActive)

    .manifest-section
        display flex
        justify-content center
        margin-top 96px
        padding 0 220px
        height 400px
        .manifest-text
            margin-right 64px
            font-size 48px
            font-weight 600
            background linear-gradient(90deg, rgba(255, 107, 0, 0.09) 57.55%, rgba(0, 0, 0, 0) 75.47%), var(--purple)
            -webkit-background-clip text
            -webkit-text-fill-color transparent
        .right-manifest
            display flex
            flex-direction column
            text-align center
            .right-manifest--title
                font-size 24px
                font-weight 600
            .right-manifest--desc
                margin-bottom 20px
                color var(--notActive)
            .start-button
                font-size 18px
                height 58px
                font-weight 600
                border-radius 12px

    .how-section
        display flex
        align-items center
        padding 32px 160px
        .how-box
            display flex
            align-items center
            width 100%
            height 140px
            margin-right 20px
            padding 20px 25px
            border-radius 4px
            border 0.5px solid var(--stroke)
            box-shadow 0px 2px 4px rgba(92, 92, 92, 0.25)
            svg
                width 100px
                height 78px
                margin-right 22px
            .how-box--group
                display flex
                flex-direction column
                text-align left
                .how-box--title
                    font-size 22px
                    font-weight 600
                .how-box--desc
                    color var(--notActive)

    .landing-section
        display flex
        align-items center
        justify-content space-between
        padding 64px 160px
        margin-bottom 120px

        .join-text
            font-size 24px
            .section-title
                margin-bottom 10px
            .start-button
                font-size 18px